<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DiffRecyclerView">
        <attr name="layoutType" format="enum">
            <enum name="linearLayout" value="0" />
            <enum name="gridLayout" value="1" />
            <enum name="staggerGridLayout" value="1" />
        </attr>
        <attr name="layoutOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="spanCount" format="integer" />
        <attr name="reverseLayout" format="boolean" />
        <attr name="dividerSize" format="dimension|reference" />
        <attr name="dividerColor" format="color|reference" />
        <attr name="dividerMode" format="enum">
            <enum name="inner" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="grid" value="3" />
        </attr>
        <attr name="enableItemTouch" format="boolean" />
        <attr name="enableLongPressDrag" format="boolean" />
        <attr name="enableItemViewSwipe" format="boolean" />
    </declare-styleable>

</resources>